{
  "name": "core",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": "./index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "npm install --omnit-dev",
    "setup_armhf": "export AR=\"arm-linux-gnueabihf-ar\" && export CC=\"arm-linux-gnueabihf-gcc\" && export CXX=\"arm-linux-gnueabihf-g++\" &&export LINK=\"arm-linux-gnueabihf-g++\"&&npm install --build-from-source --target_arch=arm --omit=dev",
    "start": "DEV=true nodemon index.js",
    "build": "rm -f -r ./dist && DOCKER_BUILDKIT=1 docker build --output dist . --no-cache=true ",
    "clean": "rm -f -r ./node_modules && rm -r ./db.sqlite",
    "install": "npm install --no-color"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "morgan": "^1.10.0",
    "node-os-utils": "^1.3.7",
    "sequelize": "^6.17.0",
    "socket.io": "^4.5.1",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19"
  },
  "pkg": {
    "script": "*.js",
    "assets": [
      "node_modules/sqlite3/lib/binding/**/*.node",
      "./core.json",
      "./config.json"
    ],
    "targets": [
      "node16-linux-armv7"
    ],
    "outputPath": "dist"
  }
}
